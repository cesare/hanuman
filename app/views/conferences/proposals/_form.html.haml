= form_for [@conference, @proposal], html: { role: 'form' } do |f|
  .form-group.title
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group.summary
    = f.label :summary
    = f.text_area :summary, class: 'form-control', rows: 10
  .form-group.notes
    = f.label :notes
    = f.text_area :notes, class: 'form-control', rows: 5
  .actions
    = f.submit 'Send', class: 'btn btn-primary'

